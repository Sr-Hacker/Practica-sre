FROM ubuntu:latest

RUN apt-get update

RUN ln -sf /usr/share/zoneinfo/America/Caracas /etc/localtime

RUN apt-get install -y apache2 mysql-server php libapache2-mod-php php-mysql && apt-get install -y systemctl

ENV var=/file

RUN mkdir $var

ADD entrypoint.sh /file

RUN chmod +x /file/entrypoint.sh

CMD /file/entrypoint.sh
